<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="?attr/actionBarSize"
    android:paddingTop="@dimen/spinner_divider_height"
    android:paddingBottom="@dimen/spinner_divider_height"
    android:weightSum="1"
    android:layout_centerVertical="true"
    android:background="@color/bckGray">

    <Space
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"/>

    <TextView
        android:id="@+id/list_group_item_color"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:text=""
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"/>

    <TextView
        android:id="@+id/list_group_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/flat_brightness_difference_dark"
        android:text=""
        android:textIsSelectable="false"
        android:singleLine="true"
        android:layout_weight="0.75"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"/>

</LinearLayout>